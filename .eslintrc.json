{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "@typescript-eslint/naming-convention": [
          "warn",
          {
              "selector": "typeLike",
              "format": [
                  "PascalCase"
              ]
          }
      ],
      "@typescript-eslint/semi": "warn",
      "no-throw-literal": "warn",
      "semi": "off",
      "no-unused-expressions": "warn",
      "no-duplicate-imports": "warn",
      "new-parens": "warn",
      "prefer-const": "warn",
      "no-var": "warn",
      "one-var-declaration-per-line": "warn"
  }
}